<Application x:Class="PerfumeManagement_QE123456.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PerfumeManagement_QE123456"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <!--Login Label Style-->
        <Style x:Key="LoginLabelStyle" TargetType="Label" >
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="#FF3324A8" />
        </Style>

        <!--Login Textbox Style-->
        <Style x:Key="LoginTextboxStyle" TargetType="TextBox" >
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Background" Value="#FFF3CFCF" />
        </Style>

        <!--Main Label Style-->
        <Style x:Key="MainLabelStyle" TargetType="Label" >
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="Foreground" Value="#FF3324A8" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <!--Main Textbox Style-->
        <Style x:Key="MainTextboxStyle" TargetType="TextBox" >
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Background" Value="#FFF3CFCF" />
        </Style>
        
        <!--LoginV2LabelStyle-->
        <Style x:Key="LoginV2LabelStyle" TargetType="Label" >
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="Foreground" Value="#FF3324A8" />
        </Style>
        <!--LoginV2TextboxStyle-->
        <Style x:Key="LoginV2TextboxStyle" TargetType="TextBox" >
             <Setter Property="TextAlignment" Value="Right"/>
             <Setter Property="Background" Value="#FFF3CFCF" />
        </Style>

        <!--Main Label V2 Style-->
        <Style x:Key="MainV2LabelStyle" TargetType="Label" >
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="Foreground" Value="#FF3324A8" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>

        <!--Main Textbox V2 Style-->
        <Style x:Key="MainV2TextboxStyle" TargetType="TextBox" >
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Background" Value="#FFF3CFCF" />
        </Style>


    </Application.Resources>
</Application>
