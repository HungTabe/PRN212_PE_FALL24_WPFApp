<Application x:Class="PerfumeManagement_QE123456.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PerfumeManagement_QE123456"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <!--Login Label Style-->
        <Style x:Key="LoginLabelStyle" TargetType="Label" >
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="#FF3324A8" />
        </Style>

        <!--Login Textbox Style-->
        <Style x:Key="LoginTextboxStyle" TargetType="TextBox" >
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Background" Value="#FFF3CFCF" />
        </Style>

    </Application.Resources>
</Application>
