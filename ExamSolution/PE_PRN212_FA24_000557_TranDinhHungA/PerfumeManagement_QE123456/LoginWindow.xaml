<Window x:Class="PerfumeManagement_QE123456.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PerfumeManagement_QE123456"
        mc:Ignorable="d"
        Title="Login Window Fall 2024" Height="400" Width="700"
        Background="#FFDDE679" WindowStartupLocation="CenterScreen"
        FontFamily="Tahoma" FontSize="13">
    <Grid>
        <Rectangle Fill="AliceBlue" HorizontalAlignment="Center" Height="245" Margin="0,39,0,0" Stroke="Black" VerticalAlignment="Top" Width="460"/>



        <Label Content="LOGIN" FontWeight="Bold"  HorizontalAlignment="Center" Margin="0,39,0,0" VerticalAlignment="Top" FontSize="40"/>

        <Label Content="Username" HorizontalAlignment="Left" Margin="199,119,0,0" 
               VerticalAlignment="Top" Height="25" Width="74" 
               Style="{StaticResource LoginLabelStyle}" />
        <Label Content="Password" HorizontalAlignment="Left" Margin="199,162,0,0" VerticalAlignment="Top" Height="24" Width="74" Style="{StaticResource LoginLabelStyle}" />
        <Button Content="LOGIN" HorizontalAlignment="Center" Margin="0,219,0,0" VerticalAlignment="Top" Height="50" Width="210"/>
        <TextBox HorizontalAlignment="Left" Margin="278,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232" Height="25"/>
        <PasswordBox HorizontalAlignment="Left" Margin="278,163,0,0" VerticalAlignment="Top" Width="232" Height="25"/>



    </Grid>
</Window>
