<Window x:Class="PerfumeManagement_QE123456.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PerfumeManagement_QE123456"
        mc:Ignorable="d"
        Title="Fall 2024 - Main PE Management" Height="500" Width="800" FontFamily="Tahoma" FontSize="13" Background="#FFDDE769" WindowStartupLocation="CenterScreen" >
    <Grid>
        <DataGrid HorizontalAlignment="Left" Width="600" Height="300" Margin="10,104,0,0"
                  VerticalAlignment="Top" AutoGenerateColumns="False">
            <!--AutoGenerateColumns="False" for 9+-->
            <!--Config Columns + Open Tag Parent-->
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="40" Binding="{Binding PerfumeId}"/>
                <DataGridTextColumn Header="Name" Width="60" Binding="{Binding PerfumeName}"/>
                <DataGridTextColumn Header="Ingredient" Width="120" Binding="{Binding Ingredients}"/>
                <DataGridTextColumn Header="Release Date" Width="90" Binding="{Binding ReleaseDate }"/>
                <DataGridTextColumn Header="Concentration" Width="120" Binding="{Binding Concentration}"/>
                <DataGridTextColumn Header="Longevity " Width="80" Binding="{Binding Longevity}"/>
                <DataGridTextColumn Header="Quantity " Width="80" Binding="{Binding Quantity}"/>
                <DataGridTextColumn Header="Price" Width="80" Binding="{Binding Price }"/>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
